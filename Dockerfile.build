# Build stage for Vite React app
FROM node:20-alpine AS builder

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy all source files
COPY . .

# Build the application
RUN npm run build

# Export stage - just to copy out the dist folder
FROM alpine:latest
COPY --from=builder /app/dist /dist

# This allows us to extract the built files
CMD ["sh", "-c", "cp -r /dist/* /output/"]