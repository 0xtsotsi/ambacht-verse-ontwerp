            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"{{event_date}}\",\n  \"time\": \"{{event_time}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/availability/check",
